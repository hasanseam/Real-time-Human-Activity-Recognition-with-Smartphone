<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RealTimeHar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/realtimehar_green_500</item>
        <item name="colorPrimaryVariant">@color/realtimehar_green_700</item>
        <item name="colorOnPrimary">@color/realtimehar_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/realtimehar_teal_200</item>
        <item name="colorSecondaryVariant">@color/realtimehar_teal_700</item>
        <item name="colorOnSecondary">@color/realtimehar_black</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/realtimehar_white</item>

        <!-- Surface color -->
        <item name="colorSurface">@color/realtimehar_white</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/realtimehar_black</item>
        <item name="android:textColorPrimary">@color/realtimehar_black</item>
        <item name="android:textColorSecondary">@color/realtimehar_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>